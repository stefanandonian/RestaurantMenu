<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.engineering.andonian.restaurantmenu.activities.FoodTypeGallery">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/protein"
        android:id="@+id/proteinButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp" />

    <ImageButton
        android:layout_width="138dp"
        android:layout_height="92dp"
        android:background="@drawable/fusion"
        android:id="@+id/fusionButton"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/proteinButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/salad"
        android:id="@+id/saladButton"
        app:layout_constraintLeft_toRightOf="@+id/proteinButton"
        android:layout_marginLeft="77dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drinks"
        android:id="@+id/drinksButton"
        app:layout_constraintRight_toLeftOf="@+id/culturalButton"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/fusionButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/saladButton" />

    <ImageButton
        android:layout_width="157dp"
        android:layout_height="116dp"
        android:background="@drawable/plants"
        android:id="@+id/plantsButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/culturalButton"
        app:layout_constraintVertical_bias="0.545"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/saladButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.569"
        tools:layout_editor_absoluteY="195dp"
        tools:layout_editor_absoluteX="390dp" />

    <ImageButton
        android:layout_width="151dp"
        android:layout_height="101dp"
        android:background="@drawable/cultural"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        android:id="@+id/culturalButton"
        android:layout_marginRight="58dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
