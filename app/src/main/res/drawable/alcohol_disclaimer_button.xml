<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/alcohol_disclaimer_darkest_red" android:endColor="@color/alcohol_disclaimer_lightest_red"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/black" />
            <gradient android:angle="-90" android:startColor="@color/alcohol_disclaimer_lightest_red" android:endColor="@color/alcohol_disclaimer_medium_red" />
        </shape>
    </item>
</selector>